<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="controllers.EntourageUser" table="ent_user">
      <meta attribute="class-description">
         This class contains the entourage user detail. 
      </meta>
      <id name="uid" type="int" column="uid">
         <generator class="native"/>
      </id>
      <property name="lastName" column="lastname" type="string"/>
      <property name="firstName" column="firstname" type="string"/>
      <property name="birthDate" column="birthdate" type="string"/>
      <property name="title" column="title" type="string"/>
      <property name="address1" column="address1" type="string"/>
      <property name="address2" column="address2" type="string"/>
      <property name="city" column="city" type="string"/>
      <property name="state" column="state" type="string"/>
      <property name="postal" column="postal" type="string"/>
      <property name="phone" column="phone" type="string"/>
      <property name="email" column="email" type="string"/>
      <property name="password" column="password" type="string"/>
      <property name="creationDate" column="creationdate" type="string"/>
      <!--<property name="profilePictureMedium" column="profilePictureMedium" type="blob"/>-->
      <!--<property name="profilePictureSmall" column="profilePictureSmall" type="blob"/>-->
      <property name="userName" column="username" type="string"/>
   </class>
</hibernate-mapping>