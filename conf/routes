# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                              controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                  controllers.Assets.at(path="/public", file)

#-------------------------------------- User API -----------------------------------------#

#Get All Users
GET     /users                                         controllers.UserController.getAllUsers()

#User Login
POST     /rest/login   	                               controllers.UserController.login()

POST     /rest/signUp                                  controllers.UserController.signUp()

#Get User Detail
GET     /rest/users/:userName                          controllers.UserController.UserDetail(userName: String)

#Update user secure detail, require password
POST   /rest/users/:userName/updateSecuredInfo         controllers.UserController.updateUserSecuredInfo(userName: String)

#Update User Detail
POST   /rest/users/:userName/updateNormalInfo          controllers.UserController.updateUserNormalInfo(userName: String)

#Delete User
POST   /rest/users/:userName/delete                    controllers.UserController.deleteUser(userName: String)
