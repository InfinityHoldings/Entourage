# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                         controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                             controllers.Assets.at(path="/public", file)

#-------------------------------------- User API -----------------------------------------#

#Get All Users
GET     /users                                    controllers.UserController.getAllUsers()

#User Login
Post     /login   	   controllers.UserController.login()

POST 	/rest/loginbones 				   controllers.UserController.loginbones() 


#Create New User
POST    /createUserAccount/:lname/:fname/:birthDate/:title/:address1/:address2/:city/:state/:postal/:phone/:email/:password/:creationDate/:userName                                           controllers.UserController.createUserAccount(lname: String, fname: String, birthDate: String, title: String, address1: String, address2: String, city: String, state: String, postal: String, phone: String, email: String, password: String, creationDate: String, userName: String)

#Get User Detail
GET     /users/:userName                          controllers.UserController.UserDetail(userName: String)

#Update user secure detail, require password
POST   /users/:userName/updateSecuredInfo         controllers.UserController.updateUserSecuredInfo(userName: String)

#Update User Detail
POST   /users/:userName/updateNormalInfo          controllers.UserController.updateUserNormalInfo(userName: String)

#Delete User
POST   /users/:userName/delete                    controllers.UserController.deleteUser(userName: String)
